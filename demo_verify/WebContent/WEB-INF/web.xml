<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>demo_verify</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>checkLogin</filter-name>
    <filter-class>com.kiri.firstjsp.GlobalFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>checkLogin</filter-name>
    <url-pattern>/function/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>stringcheck</filter-name>
    <filter-class>com.kiri.firstjsp.StringCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>stringcheck</filter-name>
    <url-pattern>/Login</url-pattern>
    <url-pattern>/SignUp</url-pattern>
  </filter-mapping>
</web-app>